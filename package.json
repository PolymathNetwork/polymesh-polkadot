{
  "version": "1.3.0-beta.4",
  "private": true,
  "engines": {
    "yarn": "^1.10.1"
  },
  "main": "index.js",
  "workspaces": [
    "packages/*"
  ],
  "resolutions": {
    "typescript": "^3.7.5"
  },
  "scripts": {
    "autogen:polymesh-api": "ts-node packages/types/src/scripts/polymeshApi.ts",
    "build": "./scripts/build-package.sh && ttsc --outDir build && ./scripts/assemble-build.sh && ./scripts/cleanup.sh",
    "build:interfaces": "node packages/types/src/scripts/interfacesTsWrapper.js",
    "docs": "node packages/types/src/scripts/MetadataMdWrapper.js && polkadot-dev-build-docs",
    "chain:info": "node packages/types/src/scripts/extractChainWrapper.js",
    "lint": "polkadot-dev-run-lint",
    "clean": "polkadot-dev-clean-build",
    "postinstall": "polkadot-dev-yarn-only",
    "test": "polkadot-dev-run-test --coverage --runInBand --testPathIgnorePatterns e2e",
    "test:one": "polkadot-dev-run-test",
    "test:watch": "polkadot-dev-run-test --watch",
    "commit": "npx git-cz"
  },
  "devDependencies": {
    "@babel/core": "^7.8.4",
    "@babel/register": "^7.8.3",
    "@babel/runtime": "^7.8.4",
    "@commitlint/cli": "^7.6.1",
    "@commitlint/config-conventional": "^7.6.0", 
    "@polkadot/dev": "^0.40.17",
    "@polkadot/ts": "^0.2.3",
    "@types/nodegit": "^0.26.1",
    "@types/rimraf": "^2.0.3",
    "@zerollup/ts-transform-paths": "1.7.11",   
    "nodegit": "^0.26.4",
    "rimraf": "^3.0.0",
    "ts-node": "^8.6.2",
    "ttypescript": "1.5.10",
    "cz-conventional-changelog": "^3.0.2",
    "husky": "^4.1.0"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
